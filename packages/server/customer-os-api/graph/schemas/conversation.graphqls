extend type Mutation {
    conversationCreate(input: ConversationInput!): Conversation!
    conversationAddMessage(conversationId: ID!, input: MessageInput!): Message!
}

type Conversation implements Node {
    id: ID!
    startedAt: Time!
    contactId: ID!
    contact: Contact @goField(forceResolver: true)
    userId: ID!
    user: User @goField(forceResolver: true)
}

input ConversationInput {
    userId: ID!
    contactId: ID!
    id: ID
}

type ConversationPage implements Pages {
    content: [Conversation!]!
    totalPages: Int!
    totalElements: Int64!
}

type Message implements Node {
    id: ID!
    channel: MessageChannel!
    startedAt: Time!
    conversationId: ID!
}

input MessageInput {
    id: ID!
    channel: MessageChannel!
    startedAt: Time
}

enum MessageChannel {
    VOICE
    MAIL
    CHAT
    WHATSAPP
    FACEBOOK
    TWITTER
}